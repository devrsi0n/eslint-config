{
  "name": "eslint-config",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "release": "lerna version --conventional-commits",
    "commit": "commit",
    "build": "lerna run --stream --toposort build",
    "clean": "yarn workspaces run clean",
    "test": "yarn workspaces run test",
    "install": "lerna bootstrap"
  },
  "precommit": "test",
  "keywords": [
    "eslint",
    "config"
  ],
  "author": "devrsi0n",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettify-base": "^0.0.2",
    "husky": "^3.0.9",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devrsi0n/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/devrsi0n/eslint-config/issues"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "homepage": "https://github.com/devrsi0n/eslint-config#readme"
}
